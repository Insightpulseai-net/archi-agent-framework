# ============================================================================
# Data Engineering Workbench - Environment Variables
# ============================================================================
# Copy this file to .env.workbench and fill in your values
# NEVER commit .env.workbench to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_ENV=production
DEBUG=false

# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl
ENCRYPTION_KEY=your-encryption-key-here-generate-with-openssl

# JWT Settings
JWT_SECRET=your-jwt-secret-here-generate-with-openssl
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=8

# ----------------------------------------------------------------------------
# Database (PostgreSQL)
# ----------------------------------------------------------------------------
POSTGRES_USER=workbench
POSTGRES_PASSWORD=your-strong-postgres-password-here
POSTGRES_DB=workbench
DATABASE_URL=postgresql://workbench:your-strong-postgres-password-here@postgres:5432/workbench

# Medallion Schema Names
BRONZE_SCHEMA=bronze
SILVER_SCHEMA=silver
GOLD_SCHEMA=gold

# ----------------------------------------------------------------------------
# Redis
# ----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# ----------------------------------------------------------------------------
# MinIO (Object Storage)
# ----------------------------------------------------------------------------
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=workbench-data
MINIO_ENDPOINT=minio:9000

# ----------------------------------------------------------------------------
# Jupyter Server
# ----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JUPYTER_TOKEN=your-jupyter-token-here

# ----------------------------------------------------------------------------
# Frontend (Next.js)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://workbench.insightpulseai.net/api
NEXT_PUBLIC_WS_URL=wss://workbench.insightpulseai.net/ws
NEXTAUTH_URL=https://workbench.insightpulseai.net
NEXTAUTH_SECRET=your-nextauth-secret-here

# ----------------------------------------------------------------------------
# Authentication
# ----------------------------------------------------------------------------
# Options: internal, oidc, supabase
AUTH_PROVIDER=internal
AUTH_URL=https://auth.insightpulseai.net

# For OIDC (if using external auth)
# OIDC_CLIENT_ID=your-client-id
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_ISSUER=https://your-issuer.com

# ----------------------------------------------------------------------------
# Multi-Tenant Settings
# ----------------------------------------------------------------------------
MULTI_TENANT_ENABLED=false
DEFAULT_TENANT_ID=default

# ----------------------------------------------------------------------------
# Odoo CE/OCA 18 Integration
# ----------------------------------------------------------------------------
ODOO_URL=https://erp.insightpulseai.net
ODOO_DB=odoo
ODOO_USER=your-odoo-user
ODOO_API_KEY=your-odoo-api-key

# Direct database connection (for faster queries, optional)
# ODOO_DB_HOST=159.223.75.148
# ODOO_DB_PORT=5432
# ODOO_DB_NAME=odoo
# ODOO_DB_USER=odoo
# ODOO_DB_PASSWORD=your-odoo-db-password

# ----------------------------------------------------------------------------
# Superset Integration
# ----------------------------------------------------------------------------
SUPERSET_URL=https://superset.insightpulseai.net
SUPERSET_API_KEY=your-superset-api-key

# Superset database for shared metadata
# SUPERSET_DB_URL=postgresql://superset:password@superset-db:5432/superset

# ----------------------------------------------------------------------------
# OCR Service Integration
# ----------------------------------------------------------------------------
OCR_SERVICE_URL=http://188.166.237.231:8080
OCR_API_KEY=your-ocr-api-key

# ----------------------------------------------------------------------------
# MCP / Agent Integration
# ----------------------------------------------------------------------------
MCP_URL=https://mcp.insightpulseai.net
MCP_API_KEY=your-mcp-api-key

# Agent endpoints
ODOO_DEVELOPER_AGENT_URL=https://agent.insightpulseai.net/odoo-developer
FINANCE_SSC_AGENT_URL=https://agent.insightpulseai.net/finance-ssc
DEVOPS_AGENT_URL=https://agent.insightpulseai.net/devops
BI_ARCHITECT_AGENT_URL=https://agent.insightpulseai.net/bi-architect

# ----------------------------------------------------------------------------
# Foundry / AI Model Integration
# ----------------------------------------------------------------------------
# FOUNDRY_ENDPOINT=https://your-foundry-endpoint.azure.com
# FOUNDRY_API_KEY=your-foundry-api-key
# FOUNDRY_DEPLOYMENT=your-deployment-name

# OpenAI (if using directly)
# OPENAI_API_KEY=your-openai-api-key

# Anthropic (if using directly)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# ----------------------------------------------------------------------------
# n8n Integration
# ----------------------------------------------------------------------------
N8N_WEBHOOK_URL=https://n8n.insightpulseai.net/webhook
N8N_API_KEY=your-n8n-api-key

# ----------------------------------------------------------------------------
# Email / Notifications
# ----------------------------------------------------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@insightpulseai.net

# Slack (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Mattermost (optional)
# MATTERMOST_WEBHOOK_URL=https://mattermost.example.com/hooks/xxx

# ----------------------------------------------------------------------------
# Backup Settings
# ----------------------------------------------------------------------------
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Remote backup (optional)
# BACKUP_S3_BUCKET=your-backup-bucket
# BACKUP_S3_ACCESS_KEY=your-s3-access-key
# BACKUP_S3_SECRET_KEY=your-s3-secret-key
# BACKUP_S3_ENDPOINT=https://s3.amazonaws.com

# ----------------------------------------------------------------------------
# Monitoring
# ----------------------------------------------------------------------------
# PROMETHEUS_ENABLED=true
# GRAFANA_URL=https://grafana.insightpulseai.net

# Sentry (error tracking)
# SENTRY_DSN=https://xxx@sentry.io/yyy

# ----------------------------------------------------------------------------
# GitHub Integration (for Spec Kit sync)
# ----------------------------------------------------------------------------
# GITHUB_TOKEN=your-github-token
# GITHUB_REPO=insightpulseai/fin-workspace-automation

# ----------------------------------------------------------------------------
# Figma Integration
# ----------------------------------------------------------------------------
# FIGMA_ACCESS_TOKEN=your-figma-access-token
# FIGMA_FILE_KEY=your-figma-file-key

# ----------------------------------------------------------------------------
# SSL/TLS (for nginx)
# ----------------------------------------------------------------------------
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ----------------------------------------------------------------------------
# Temporal Settings
# ----------------------------------------------------------------------------
TEMPORAL_HOST=temporal-server:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=workbench-tasks
