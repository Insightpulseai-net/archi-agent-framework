<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BIR Form Form View -->
    <record id="bir_form_form" model="ir.ui.view">
        <field name="name">bir.form.form</field>
        <field name="model">bir.form</field>
        <field name="arch" type="xml">
            <form string="BIR Form">
                <header>
                    <button name="action_compute" string="Compute"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_validate" string="Validate"
                            type="object" class="btn-primary"
                            invisible="state != 'computed'"/>
                    <button name="action_submit" string="Submit to BIR"
                            type="object" class="btn-success"
                            invisible="state != 'validated'"/>
                    <button name="action_create_amendment" string="Create Amendment"
                            type="object"
                            invisible="state not in ('submitted', 'accepted')"/>
                    <button name="action_reset_draft" string="Reset to Draft"
                            type="object"
                            invisible="state in ('draft', 'accepted')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,computed,validated,submitted,accepted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_bir_tax_calculation)d" type="action"
                                class="oe_stat_button" icon="fa-calculator">
                            <field name="calculation_ids" widget="statinfo" string="Calculations"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Amendment"
                            invisible="not is_amendment"
                            bg_color="bg-warning"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="form_type_id" options="{'no_create': True}"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Period">
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="due_date"/>
                            <field name="filing_date" invisible="state not in ('submitted', 'accepted')"/>
                        </group>
                        <group string="Taxpayer">
                            <field name="company_id"/>
                            <field name="tin"/>
                            <field name="registered_name"/>
                            <field name="rdo_code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Amounts" name="amounts">
                            <group>
                                <group string="Income/Sales">
                                    <field name="gross_amount"/>
                                    <field name="taxable_amount"/>
                                </group>
                                <group string="Tax">
                                    <field name="tax_due"/>
                                    <field name="tax_credits"/>
                                    <field name="tax_payable"/>
                                    <field name="penalties"/>
                                    <field name="total_amount_due" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                        <page string="Form Details" name="form_data">
                            <field name="form_data_display" readonly="1" widget="text"/>
                        </page>
                        <page string="E-Filing" name="efiling" invisible="state == 'draft'">
                            <group>
                                <field name="confirmation_number"/>
                                <field name="filing_reference"/>
                            </group>
                            <group string="Submission Log">
                                <field name="submission_log" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Amendment" name="amendment" invisible="not is_amendment">
                            <group>
                                <field name="original_form_id"/>
                                <field name="amendment_reason"/>
                            </group>
                        </page>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- BIR Form Tree View -->
    <record id="bir_form_tree" model="ir.ui.view">
        <field name="name">bir.form.tree</field>
        <field name="model">bir.form</field>
        <field name="arch" type="xml">
            <tree string="BIR Forms" decoration-info="state == 'draft'"
                  decoration-warning="state == 'computed'"
                  decoration-success="state in ('validated', 'accepted')"
                  decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="form_code"/>
                <field name="form_type_id"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="due_date"/>
                <field name="tax_due" sum="Total Tax Due"/>
                <field name="total_amount_due" sum="Total Amount Due"/>
                <field name="state" widget="badge"/>
                <field name="is_amendment" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- BIR Form Search View -->
    <record id="bir_form_search" model="ir.ui.view">
        <field name="name">bir.form.search</field>
        <field name="model">bir.form</field>
        <field name="arch" type="xml">
            <search string="Search BIR Forms">
                <field name="name"/>
                <field name="form_type_id"/>
                <field name="form_code"/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_computed" string="Computed" domain="[('state', '=', 'computed')]"/>
                <filter name="filter_validated" string="Validated" domain="[('state', '=', 'validated')]"/>
                <filter name="filter_submitted" string="Submitted" domain="[('state', '=', 'submitted')]"/>
                <separator/>
                <filter name="filter_due_this_month" string="Due This Month"
                        domain="[('due_date', '&gt;=', (context_today()).strftime('%Y-%m-01')),
                                 ('due_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter name="filter_overdue" string="Overdue"
                        domain="[('due_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('state', 'not in', ('submitted', 'accepted'))]"/>
                <separator/>
                <filter name="filter_income_tax" string="Income Tax" domain="[('category', '=', 'income_tax')]"/>
                <filter name="filter_withholding" string="Withholding Tax" domain="[('category', '=', 'withholding_tax')]"/>
                <filter name="filter_vat" string="VAT" domain="[('category', '=', 'vat')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_form_type" string="Form Type" context="{'group_by': 'form_type_id'}"/>
                    <filter name="group_period" string="Period" context="{'group_by': 'period_end:month'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_category" string="Category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_bir_form" model="ir.actions.act_window">
        <field name="name">BIR Forms</field>
        <field name="res_model">bir.form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="bir_form_search"/>
        <field name="context">{'search_default_filter_due_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first BIR form
            </p>
            <p>
                Generate and file BIR tax forms (1700, 1601-C, 2550-Q, etc.)
            </p>
        </field>
    </record>

    <!-- BIR Form Type Views -->
    <record id="bir_form_type_tree" model="ir.ui.view">
        <field name="name">bir.form.type.tree</field>
        <field name="model">bir.form.type</field>
        <field name="arch" type="xml">
            <tree string="BIR Form Types">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="frequency"/>
                <field name="deadline_day"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="bir_form_type_form" model="ir.ui.view">
        <field name="name">bir.form.type.form</field>
        <field name="model">bir.form.type</field>
        <field name="arch" type="xml">
            <form string="BIR Form Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code"/> - <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="frequency"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="deadline_day"/>
                            <field name="deadline_offset"/>
                            <field name="ebirforms_enabled"/>
                            <field name="efps_enabled"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Instructions">
                            <field name="instructions"/>
                        </page>
                        <page string="Attachments">
                            <group>
                                <field name="attachment_required"/>
                                <field name="attachment_types" invisible="not attachment_required"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bir_form_type" model="ir.actions.act_window">
        <field name="name">Form Types</field>
        <field name="res_model">bir.form.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
