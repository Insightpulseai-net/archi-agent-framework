<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BIR Tax Calculation Form View -->
    <record id="bir_tax_calculation_form" model="ir.ui.view">
        <field name="name">bir.tax.calculation.form</field>
        <field name="model">bir.tax.calculation</field>
        <field name="arch" type="xml">
            <form string="BIR Tax Calculation">
                <header>
                    <button name="action_calculate" string="Calculate"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_validate" string="Validate"
                            type="object" class="btn-primary"
                            invisible="state != 'calculated'"/>
                    <button name="action_reset_draft" string="Reset to Draft"
                            type="object"
                            invisible="state in ('draft', 'filed')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,calculated,validated,filed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Employee Information">
                            <field name="employee_id"/>
                            <field name="calculation_date"/>
                            <field name="payroll_period"/>
                        </group>
                        <group string="Exemptions">
                            <field name="is_minimum_wage_earner"/>
                            <field name="is_senior_citizen"/>
                            <field name="is_pwd"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Income" name="income">
                            <group>
                                <group string="Taxable Income">
                                    <field name="gross_salary"/>
                                    <field name="overtime_pay"/>
                                    <field name="holiday_pay"/>
                                    <field name="night_differential"/>
                                    <field name="other_taxable_income"/>
                                    <field name="total_taxable_income" class="oe_subtotal_footer_separator"/>
                                </group>
                                <group string="Non-Taxable Income">
                                    <field name="thirteenth_month_pay"/>
                                    <field name="de_minimis_benefits"/>
                                </group>
                            </group>
                        </page>
                        <page string="Deductions" name="deductions">
                            <group>
                                <group string="Mandatory Deductions">
                                    <field name="sss_contribution"/>
                                    <field name="philhealth"/>
                                    <field name="pagibig"/>
                                    <field name="total_mandatory_deductions" class="oe_subtotal_footer_separator"/>
                                </group>
                                <group string="Tax">
                                    <field name="taxable_income_after_deductions"/>
                                    <field name="tax_bracket"/>
                                    <field name="withholding_tax"/>
                                </group>
                            </group>
                        </page>
                        <page string="Summary" name="summary">
                            <group>
                                <group string="Total Deductions">
                                    <field name="total_deductions"/>
                                </group>
                                <group string="Net Pay">
                                    <field name="net_salary" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                            <group string="Calculation Log">
                                <field name="calculation_log" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- BIR Tax Calculation Tree View -->
    <record id="bir_tax_calculation_tree" model="ir.ui.view">
        <field name="name">bir.tax.calculation.tree</field>
        <field name="model">bir.tax.calculation</field>
        <field name="arch" type="xml">
            <tree string="BIR Tax Calculations">
                <field name="calculation_date"/>
                <field name="employee_id"/>
                <field name="gross_salary" sum="Total Gross"/>
                <field name="sss_contribution" sum="Total SSS"/>
                <field name="philhealth" sum="Total PhilHealth"/>
                <field name="pagibig" sum="Total PAGIBIG"/>
                <field name="withholding_tax" sum="Total Tax"/>
                <field name="net_salary" sum="Total Net"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'validated'"
                       decoration-info="state == 'calculated'"
                       decoration-warning="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <!-- BIR Tax Calculation Search View -->
    <record id="bir_tax_calculation_search" model="ir.ui.view">
        <field name="name">bir.tax.calculation.search</field>
        <field name="model">bir.tax.calculation</field>
        <field name="arch" type="xml">
            <search string="Search Tax Calculations">
                <field name="employee_id"/>
                <field name="calculation_date"/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_calculated" string="Calculated" domain="[('state', '=', 'calculated')]"/>
                <filter name="filter_validated" string="Validated" domain="[('state', '=', 'validated')]"/>
                <separator/>
                <filter name="filter_minimum_wage" string="Minimum Wage" domain="[('is_minimum_wage_earner', '=', True)]"/>
                <filter name="filter_senior" string="Senior Citizens" domain="[('is_senior_citizen', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'calculation_date:month'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bir_tax_calculation" model="ir.actions.act_window">
        <field name="name">Tax Calculations</field>
        <field name="res_model">bir.tax.calculation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="bir_tax_calculation_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tax calculation
            </p>
            <p>
                Calculate SSS, PhilHealth, PAGIBIG, and withholding tax for employees.
            </p>
        </field>
    </record>
</odoo>
