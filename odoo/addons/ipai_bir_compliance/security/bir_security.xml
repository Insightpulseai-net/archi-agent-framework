<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_bir_user" model="res.groups">
        <field name="name">BIR / User</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_bir_officer" model="res.groups">
        <field name="name">BIR / Officer</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_bir_user'))]"/>
    </record>

    <record id="group_bir_manager" model="res.groups">
        <field name="name">BIR / Manager</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_bir_officer'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="bir_tax_calculation_company_rule" model="ir.rule">
        <field name="name">BIR Tax Calculation: Multi-Company</field>
        <field name="model_id" ref="model_bir_tax_calculation"/>
        <field name="domain_force">[('employee_id.company_id', 'in', company_ids)]</field>
    </record>

    <record id="bir_form_company_rule" model="ir.rule">
        <field name="name">BIR Form: Multi-Company</field>
        <field name="model_id" ref="model_bir_form"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="bir_filing_company_rule" model="ir.rule">
        <field name="name">BIR Filing: Multi-Company</field>
        <field name="model_id" ref="model_bir_filing"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
